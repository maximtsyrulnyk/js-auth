<div class="page page--background">
    <header>
        {{> back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Відновлення паролю</h1>

        <div class="form">
            <div class="form__item">
                {{>field action="recoveryForm.change" label="Ел. адреса" type="email" name="email" placeholder="Ваш
                email"}}
                <span name="email" class="form__error">Помилка</span>
            </div>

        </div>

        <button onclick="recoveryForm.submit()" class="button button--disabled" type="button">Відновити пароль</button>

        <span class="alert alert--disabled">Внимание, ошибка!</span>
    </form>
</div>